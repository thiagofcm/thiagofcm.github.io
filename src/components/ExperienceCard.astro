---
interface Props {
  title: string;
  location: string;
  time: string;
  descriptions: string[];
}

const { title, location, time, descriptions } = Astro.props;
---

<div class="flex gap-8">
  <div class="flex flex-col items-center">
    <div class="h-3 w-3 rounded-full bg-purple-600 dark:bg-purple-400"></div>
    <div class="h-full w-1 bg-purple-600 dark:bg-purple-400"></div>
  </div>
  <div class="mb-8 rounded-xl bg-neutral-200 p-6 dark:bg-neutral-800">
    <div class="md:flex md:items-center md:justify-between">
      <div>
        <p class="font-semibold">{title}</p>
        <p class="text-purple-600 dark:text-purple-400">{location}</p>
      </div>
      <p class="text-xs text-neutral-600 dark:text-neutral-400 md:text-right">{time}</p>
    </div>
    <ul class="ml-4 mt-4 list-disc text-sm leading-relaxed">
      {descriptions.map((description) => <li>{description}</li>)}
    </ul>
  </div>
</div>
